# Debian test container for SoulOfNix
FROM --platform=linux/amd64 debian:bookworm-slim

# Install basic dependencies
RUN apt-get update && apt-get install -y \
    bash \
    curl \
    git \
    xz-utils \
    sudo \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Create test user
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Copy SoulOfNix files
COPY --chown=testuser:testuser . /home/testuser/SoulOfNix/

# Switch to test user
USER testuser
WORKDIR /home/testuser/SoulOfNix

# Run test script from inside SoulOfNix directory
CMD ["./tests/test-install.sh"]
