# Alpine Linux test container for SoulOfNix
FROM alpine:3.19

# Install basic dependencies
RUN apk add --no-cache \
    bash \
    curl \
    git \
    xz \
    sudo \
    shadow

# Create test user
RUN adduser -D -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Set locale (Alpine-specific requirement)
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8

# Copy SoulOfNix files
COPY --chown=testuser:testuser . /home/testuser/SoulOfNix/

# Switch to test user
USER testuser
WORKDIR /home/testuser/SoulOfNix

# Run test script from inside SoulOfNix directory
CMD ["./tests/test-install.sh"]
